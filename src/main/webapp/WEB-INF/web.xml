<?xml version="1.0" encoding="UTF-8"?>

<web-app 
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                        https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
    version="5.0">

    <!-- NOMBRE DE LA APP -->
    <display-name>Tienda Backend</display-name>

    <!-- CONFIG GENERAL -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- =======================
         MAPEO DE CONTROLADORES
         ======================= -->

    <!-- CATEGORÃAS -->
    <servlet>
        <servlet-name>CategoriaController</servlet-name>
        <servlet-class>com.tuempresa.app.controllers.CategoriaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoriaController</servlet-name>
        <url-pattern>/api/categorias/*</url-pattern>
    </servlet-mapping>

    <!-- PRODUCTOS -->
    <servlet>
        <servlet-name>ProductoController</servlet-name>
        <servlet-class>com.tuempresa.app.controllers.ProductoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoController</servlet-name>
        <url-pattern>/api/productos/*</url-pattern>
    </servlet-mapping>

    <!-- PROVEEDORES -->
    <servlet>
        <servlet-name>ProveedorController</servlet-name>
        <servlet-class>com.tuempresa.app.controllers.ProveedorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProveedorController</servlet-name>
        <url-pattern>/api/proveedores/*</url-pattern>
    </servlet-mapping>

    <!-- CLIENTES -->
    <servlet>
        <servlet-name>ClienteController</servlet-name>
        <servlet-class>com.tuempresa.app.controllers.ClienteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteController</servlet-name>
        <url-pattern>/api/clientes/*</url-pattern>
    </servlet-mapping>

    <!-- COMPRAS -->
    <servlet>
        <servlet-name>CompraController</servlet-name>
        <servlet-class>com.tuempresa.app.controllers.CompraController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompraController</servlet-name>
        <url-pattern>/api/compras/*</url-pattern>
    </servlet-mapping>

    <!-- VENTAS -->
    <servlet>
        <servlet-name>VentaController</servlet-name>
        <servlet-class>com.tuempresa.app.controllers.VentaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VentaController</servlet-name>
        <url-pattern>/api/ventas/*</url-pattern>
    </servlet-mapping>

</web-app>
